    <formset>
        <form name="users">
            <field property="nombre" depends="required">
                <arg0 key="forms.cliente.rif" />
            </field>
            <field property="correo" depends="required,email">
                <arg0 key="forms.cliente.nombre" />
            </field>
            </form>
        </formset>
</form-validation>
