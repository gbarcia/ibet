<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.sources.dir}/jax-ws"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-client-IbetWebServices" depends="wsimport-init">
        <mkdir dir="${build.generated.dir}/jax-wsCache/IbetWebServices"/>
        <wsimport sourcedestdir="${build.generated.dir}/jax-wsCache/IbetWebServices" destdir="${build.generated.dir}/jax-wsCache/IbetWebServices" wsdl="${basedir}/${conf-dir}xml-resources/web-service-references/IbetWebServices/wsdl/IbetWebServices.wsdl" catalog="catalog.xml" extension="true" verbose="true" wsdlLocation="file:/home/nath/NetBeansProjects/ProyectoIBET/web/WEB-INF/config/wsdl/IbetWebServices.wsdl" xnocompile="true">
            <depends file="${basedir}/${conf-dir}xml-resources/web-service-references/IbetWebServices/wsdl/IbetWebServices.wsdl"/>
            <produces dir="${build.generated.dir}/jax-wsCache/IbetWebServices"/>
        </wsimport>
        <copy todir="${build.generated.sources.dir}/jax-ws">
            <fileset dir="${build.generated.dir}/jax-wsCache/IbetWebServices">
                <include name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="wsimport-client-clean-IbetWebServices" depends="-init-project">
        <delete dir="${build.generated.sources.dir}/jax-ws/ve/edu/ucab/ibet/servicios/impl/ws"/>
        <delete dir="${build.generated.dir}/jax-wsCache/IbetWebServices"/>
    </target>
    <target name="wsimport-client-generate" depends="wsimport-client-IbetWebServices"/>
</project>
